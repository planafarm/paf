<section class="section">
  <div class="container">
    <h1 class="title">Fornecedores</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= link_to 'Mostrar', supplier %></td>
            <td><%= link_to 'Editar', edit_supplier_path(supplier) %></td>
            <td><%= link_to 'Apagar', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo fornecedor', new_supplier_path %>
  </div>
</section>
